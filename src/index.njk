<style>
@keyframes fade-out-n {
  0%, 10% {
    opacity: 1;
  }
  16.67%, 100% {
    opacity: 0;
  }
}

@keyframes fade-in-n {
  0%, 10% {
    opacity: 0;
  }
  16.67%, 100% {
    opacity: 1;
  }
}

@keyframes shrink-wrapper {
  0%, 10% {
    width: 0.75em;
  }
  16.67%, 100% {
    width: 0.6em;
  }
}

@keyframes compress-vowel {
  0%, 20% {
    opacity: 1;
    text-decoration: none;
    max-width: 1em;
    margin-left: 0;
    margin-right: 0;
  }
  26.67%, 40% {
    opacity: 0.4;
    text-decoration: line-through;
    max-width: 1em;
    margin-left: 0;
    margin-right: 0;
  }
  50%, 100% {
    opacity: 0;
    text-decoration: line-through;
    max-width: 0;
    margin-left: 0;
    margin-right: 0;
  }
}

@keyframes pulse-fade {
  /* Animation phase â€” no pulsing */
  0%, 27% {
    opacity: 1;
  }
  /* Slow pulses */
  35% { opacity: 0.6; }
  42% { opacity: 1; }
  49% { opacity: 0.6; }
  55% { opacity: 1; }
  /* Medium pulses */
  60% { opacity: 0.5; }
  65% { opacity: 1; }
  70% { opacity: 0.5; }
  74% { opacity: 1; }
  /* Fast pulses */
  78% { opacity: 0.4; }
  81% { opacity: 1; }
  84% { opacity: 0.4; }
  87% { opacity: 1; }
  /* Rapid pulses */
  89% { opacity: 0.3; }
  91% { opacity: 1; }
  93% { opacity: 0.3; }
  95% { opacity: 1; }
  97% { opacity: 0.3; }
  99% { opacity: 1; }
  100% { opacity: 1; }
}

.name-container {
  display: inline-flex;
  align-items: baseline;
  position: relative;
  animation: pulse-fade 15s linear infinite;
}

.n-wrapper {
  position: relative;
  display: inline-block;
  overflow: hidden;
  animation: shrink-wrapper 15s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  vertical-align: baseline;
  line-height: 1;
  height: 1em;
}

.n-upper {
  position: absolute;
  left: 0;
  top: 0;
  display: inline-block;
  animation: fade-out-n 15s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

.n-lower {
  position: relative;
  display: inline-block;
  animation: fade-in-n 15s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

.compress-vowel {
  display: inline-block;
  animation: compress-vowel 15s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  overflow: hidden;
  white-space: nowrap;
}

.compress-vowel:nth-child(3) { animation-delay: 0s; }
.compress-vowel:nth-child(5) { animation-delay: 0.15s; }
</style>

