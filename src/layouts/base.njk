---
title: Not Specified
links: [
{
  title: "blog",
  url: "/blog/",
}
]
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Nikodem Bieniek's personal website" />
    <meta name="author" content="Nikodem Bieniek" />
    <meta name="keywords" content="Nikodem Bieniek, personal website, blog, technology, Computer Science, CS" />
    <link rel="stylesheet" href="/style.css?v={{site.version}}" />
    <link
    id="prism-theme"
    href="https://unpkg.com/automad-prism-themes/dist/prism-tokyo-night-light.css"
    rel="stylesheet"
  />
    <title>{{ title }}</title>
    <script>
      (function(){
        var d=localStorage.getItem('theme')==='dark';
        if(d)document.documentElement.classList.add('dark');
        document.getElementById('prism-theme').href=
          'https://unpkg.com/automad-prism-themes/dist/'+(d?'prism-tokyo-night':'prism-tokyo-night-light')+'.css';
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col font-sans bg-neutral-50 dark:bg-neutral-900 dark:text-neutral-200 overflow-x-hidden">
    <div class="flex flex-col mx-4 my-4 overflow-hidden">
      <nav class="flex flex-row gap-4 items-center w-fit">
        <a class="font-logo font-normal text-xl w-fit text-nowrap logo-expand-wrapper" href="/">~n<span class="logo-vowel">i</span>k<span class="logo-vowel">o</span>dem</a>
        <ul class="flex flex-row gap-2 italic">
          {% for link in links %}
          <li>
            <a href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>
      </nav>

      <main class="relative mx-auto max-w-lg mt-8 md:mt-0 w-full min-w-0 overflow-x-hidden">
        <h1 class="uppercase text-lg font-display">
          {% if title %}
          {{ title }}
          {% else %}
          {{ page.title }}
          {% endif %}
        </h1>
        {% if topics %}
        <div class="flex flex-wrap gap-1.5 mt-2">
          {%- for tag in topics -%}
          <a href="/blog/tags/{{ tag | slugify }}/" class="text-xs px-2 py-0.5 rounded-full border border-neutral-300 dark:border-neutral-600 text-neutral-600 dark:text-neutral-400 hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors no-underline">
            {{ tag }}
          </a>
          {%- endfor -%}
        </div>
        {% endif %}
        <hr class="border-t-2 border-neutral-500 dark:border-neutral-600 my-4" />
        {% if prose !== false %}
        <div class="prose dark:prose-invert">
        {% endif %}
          {{ content | safe }}
        {% if prose !== false %}
        </div>
        {% endif %}
      </main>
    </div>
    <footer class="flex flex-row gap-4 justify-center items-center px-4 py-2 text-sm">
      <a class="text-red-800 dark:text-red-400 font-bold" href="/feed.xml">RSS</a>
      <span>·</span>
      <a class="text-orange-300 dark:text-orange-400 underline"
        href="https://github.com/nkdem/personal-site/tree/{{ site.version }}"
        >{{ site.version }}</a>
      <span>·</span>
      <a onclick="toggleTheme()" style="cursor:pointer">light/dark</a>
      <script>
        function toggleTheme(){
          var d=document.documentElement.classList.toggle('dark');
          localStorage.setItem('theme',d?'dark':'light');
          document.getElementById('prism-theme').href=
            'https://unpkg.com/automad-prism-themes/dist/'+(d?'prism-tokyo-night':'prism-tokyo-night-light')+'.css';
        }
        function copyTerminal(btn){
          var cmds=btn.closest('.terminal').getAttribute('data-commands');
          navigator.clipboard.writeText(cmds).then(function(){
            var orig=btn.textContent;
            btn.textContent='copied!';
            setTimeout(function(){btn.textContent=orig;},1500);
          });
        }
      </script>
    </footer>
  </body>
</html>
